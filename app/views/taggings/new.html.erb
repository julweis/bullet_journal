<!-- Validation failure messages -->
<% if @tagging.errors.any? %>
  <% @tagging.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Tagging</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_tagging" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for note_id -->
      <div class="form-group">
        <label for="note_id" class="control-label">
          Note
        </label>

        <%= select_tag(:note_id, options_from_collection_for_select(Note.all, :id, :created_at, @tagging.note_id), :class => "form-control") %>
      </div>

      <!-- Label and input for list_id -->
      <div class="form-group">
        <label for="list_id" class="control-label">
          List
        </label>

        <input type="text" id="list_id" name="list_id" placeholder="List" class="form-control" value="<%= @tagging.list_id %>">
      </div>

      <button class="btn btn-success">
        Create Tagging
      </button>
      or
      <a href="/taggings">Cancel</a>
    </form>
  </div>
</div>
