<div class="page-header">
  <h2>
    all lists

  </h2>
</div>
<div class="row mb-1">

<div class="col-md-12">  <div class="panel panel-default">
  <div class="panel-body">

    <form action="/create_list" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <input type="text" id="list" name="list" placeholder="Quick-add a new list..." class="form-control" >

      <input type="hidden" name="user_id" value="<%=current_user.id%>">

    </form>
  </div>
</div>

    <table class="table table-striped table-hover">
      <tr>
        <th>List</th>
        <th>Actions</th>
      </tr>

      <% @lists.each do |list| %>
      <tr>
        <td><%= list.list %></td>
        <td>

          <div class="btn-group" role="group">
            <button type="button" class="btn btn-link"><a href="/lists/<%= list.id %>" ><i class="fa fa-lg fa-eye" aria-hidden="true"></i></a>
            </button>
            <button type="button" class="btn btn-link"><a href="/lists/<%= list.id %>/edit" ><i class="fa fa-lg fa-pencil-square-o" aria-hidden="true"></i></a>
            </button>
            <button type="button" class="btn btn-link"><a href="/delete_list/<%= list.id %>"  rel="nofollow"><i class="fa fa-lg fa-trash-o" aria-hidden="true"></i></a>
            </button>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @lists, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
